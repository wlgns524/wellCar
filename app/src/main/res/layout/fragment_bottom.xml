<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="46dp"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/space_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:weightSum="4">


        <LinearLayout
            android:id="@+id/layoutTab1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bottom_bar_border"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgTab1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:adjustViewBounds="true"
                android:padding="1dp"
                android:scaleType="fitXY"
                android:src="@drawable/bottom_home_select" />

            <TextView
                android:id="@+id/txtTab1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="홈"
                android:textColor="@color/bottom_menu_select"
                android:textSize="11sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutTab2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bottom_bar_border"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgTab2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:adjustViewBounds="true"
                android:padding="1dp"
                android:scaleType="fitXY"
                android:src="@drawable/bottom_talk_select" />

            <TextView
                android:id="@+id/txtTab2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="웰카톡"
                android:textColor="@color/bottom_menu_select"
                android:textSize="11sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layoutTab3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bottom_bar_border"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgTab3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:adjustViewBounds="true"
                android:padding="1dp"
                android:scaleType="fitXY"
                android:src="@drawable/bottom_company_select" />

            <TextView
                android:id="@+id/txtTab3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="협력업체"
                android:textColor="@color/bottom_menu_select"
                android:textSize="11sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutTab4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bottom_bar_border"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgTab4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:adjustViewBounds="true"
                android:padding="1dp"
                android:scaleType="fitXY"
                android:src="@drawable/bottom_user_select" />

            <TextView
                android:id="@+id/txtTab4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="내 정보"
                android:textColor="@color/bottom_menu_select"
                android:textSize="11sp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
