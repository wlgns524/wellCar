<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/space_border_white_corner_5"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="차량을 등록하고\n웰카의 서비스를 이용해 보세요!"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/app_color_border_app_color_background_corner_25"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:paddingRight="30dp"
            android:paddingBottom="10dp"
            android:text="내 차량 등록하기"
            android:textColor="@color/white" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">
        <TextView
            android:id="@+id/tv_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="로그인"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15dp"
            android:background="@drawable/color_app_color_border_corner_20"
            android:padding="10dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_membership"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="회원가입"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15dp"
            android:background="@drawable/color_app_color_border_corner_20"
            android:padding="10dp"
            android:gravity="center"
            android:layout_marginStart="10dp"/>
    </LinearLayout>

</LinearLayout>