<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_select_iv_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:scaleType="centerCrop" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/selector_00000000_7fffffff"
        android:duplicateParentState="true" />

    <TextView
        android:id="@+id/image_select_tv_number"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:background="@drawable/selector_00000000_rect_stroke_6_66ffffff"
        android:duplicateParentState="true"
        android:gravity="center"
        android:includeFontPadding="true"
        android:maxLines="1"
        android:padding="7dp"
        android:textColor="@drawable/selector_ffffff_66ffffff"
        android:textSize="18dp"
        android:textStyle="bold"
        app:autoSizeMaxTextSize="18dp"
        app:autoSizeMinTextSize="5dp"
        app:autoSizeTextType="uniform" />
</FrameLayout>